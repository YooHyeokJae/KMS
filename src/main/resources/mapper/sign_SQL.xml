<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hj.mapper.SignMapper">
    <select id="searchChild" resultType="com.hj.vo.ChildVo">
        SELECT * FROM CHILD WHERE NAME LIKE CONCAT('%', #{keyword}, '%')
    </select>

    <select id="getUserByUserId" resultType="com.hj.vo.UserVo">
        SELECT * FROM USER WHERE ID = #{userId}
    </select>

    <select id="login" resultType="com.hj.vo.UserVo">
        SELECT * FROM USER WHERE ID = #{userId} AND PASSWORD = #{userPw}
    </select>
</mapper>